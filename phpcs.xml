<?xml version="1.0"?>
<ruleset name="WordPress Plugin Coding Standards">
    <description>WordPress Plugin Coding Standards for Hi-Hat Repeater</description>

    <!-- Show progress -->
    <arg value="p"/>
    <!-- Strip the filepaths down to the relevant bit -->
    <arg name="basepath" value="./"/>
    <!-- Enable colors in output -->
    <arg name="colors"/>
    <!-- Only check PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Include the WordPress ruleset -->
    <rule ref="WordPress">
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
    </rule>

    <!-- Include WordPress VIP rules -->
    <rule ref="WordPress-VIP-Go">
        <exclude name="WordPressVIPMinimum.Performance.LowExpiryTime.LowCacheTime"/>
    </rule>

    <!-- Include PHP compatibility checks -->
    <rule ref="PHPCompatibility">
        <config name="testVersion" value="7.4-"/>
    </rule>

    <!-- Exclude files and directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/.git/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/dist/*</exclude-pattern>

    <!-- File specific exclusions -->
    <rule ref="WordPress.Files.FileName">
        <exclude-pattern>*.js</exclude-pattern>
        <exclude-pattern>*.css</exclude-pattern>
        <exclude-pattern>*.md</exclude-pattern>
        <exclude-pattern>*.yml</exclude-pattern>
        <exclude-pattern>*.yaml</exclude-pattern>
        <exclude-pattern>*.json</exclude-pattern>
        <exclude-pattern>*.xml</exclude-pattern>
        <exclude-pattern>*.txt</exclude-pattern>
    </rule>

    <!-- Custom rules for this project -->
    <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter">
        <properties>
            <property name="allowNamedParameters" value="false"/>
        </properties>
    </rule>

    <!-- Allow long array syntax for readability -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax">
        <severity>0</severity>
    </rule>

    <!-- Allow short echo tags -->
    <rule ref="Generic.PHP.DisallowShortOpenTag">
        <severity>0</severity>
    </rule>

    <!-- Files to check -->
    <file>hi-hat-repeater.php</file>
    <file>fields/</file>
    <file>src/</file>
</ruleset>