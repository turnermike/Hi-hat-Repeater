{
    "name": "yourusername/hi-hat-repeater",
    "description": "An Advanced Custom Fields add-on for a repeater-like field with multiple text areas.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com",
            "homepage": "https://github.com/yourusername"
        }
    ],
    "homepage": "https://github.com/yourusername/hi-hat-repeater",
    "support": {
        "issues": "https://github.com/yourusername/hi-hat-repeater/issues",
        "source": "https://github.com/yourusername/hi-hat-repeater"
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "analyze": "phpstan analyze",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-clover=coverage.xml",
        "check": [
            "@lint",
            "@analyze",
            "@test"
        ],
        "install-codestandards": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
    },
    "autoload": {
        "psr-4": {
            "HiHatRepeater\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HiHatRepeater\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
